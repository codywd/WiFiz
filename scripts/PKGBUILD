# Maintainer: Cody Dostal <dostalcody@gmail.com>

pkgname=WiFiz
_gitname=WiFiz-develop
pkgver=0.9.1.1
pkgrel=1
pkgdesc="NetCTL GUI Frontend, written in wxPython. Stable Version."
arch=('any')
url="https://github.com/codywd/WiFiz"
license=('MIT')
depends=('python2' 'wxpython' 'wireless_tools' 'netctl')
makedepends=('git')
conflicts=('wifiz-nightly' 'wifiz-git' 'wifiz')
provides=('wifiz')
options=(!emptydirs)
source=('wifiz-develop::git://github.com/codywd/WiFiz.git#branch=develop')
md5sums=('SKIP')

pkgver() {
  cd $srcdir/wifiz-develop
  # Use the tag of the last commit
  git describe --always | sed 's|-|.|g'
}

package() {
  cd $srcdir/$_gitname
  pwd
  python2 setup.py install --root="$pkgdir/" --optimize=1
}
